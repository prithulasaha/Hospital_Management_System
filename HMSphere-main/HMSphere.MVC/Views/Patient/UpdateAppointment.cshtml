@model HMSphere.MVC.ViewModels.AppointmentViewModel

<div class="container mt-5">
    <h2>Update Appointment</h2>
    <form asp-action="UpdateAppointment" method="post">
        <!-- Department and Doctor Fields -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Department">Department</label>
                    <select class="form-control" asp-for="DepartmentId" asp-items="ViewBag.Departments">
                        <option value="">-- Select One --</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Doctor">Doctor</label>
                    <select class="form-control" asp-for="DoctorId" asp-items="ViewBag.Doctors">
                        <option value="">Select Doctor</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Date and Time Fields -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Date">Date</label>
                    <input type="date" class="form-control" asp-for="Date" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Time">Time</label>
                    <input type="time" class="form-control" asp-for="AppointmentTime" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Status">Status</label>
            <select class="form-control" asp-for="Status">
                <option value="Pending">Pending</option>
                <option value="Completed">Completed</option>
                <option value="Canceled">Canceled</option>
            </select>
        </div>
        <!-- Reason for Appointment -->
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="Reason">Reason</label>
                    <textarea class="form-control" asp-for="ReasonFor"></textarea>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="row">
            <div class="col-md-12 mt-5">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>
