@model IEnumerable<HMSphere.MVC.ViewModels.AppointmentViewModel>

<h2>Pending Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Appointment Date</th>
            <th>Doctor</th>
            <th>Patient</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Date</td>
                <td>@appointment.DoctorName</td>
                <td>@appointment.PatientName</td>
                <td>@appointment.Status</td>
                <td>
                    <form asp-action="ApproveAppointment" method="post">
                        <input type="hidden" name="id" value="@appointment.Id" />
                        <button type="submit" name="isApproved" value="true" class="btn btn-success">Approve</button>
                        <button type="submit" name="isApproved" value="false" class="btn btn-danger">Disapprove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
