@model HMSphere.MVC.ViewModels.AppointmentsViewModel

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-5">Appointment Details</h4>

            <p><strong>Date:</strong> @Model.Date.Date.ToString("yyyy-MM-dd")</p>
            <p><strong>Time:</strong> @Model.AppointmentTime</p>

            <div class="form-group">
                <label asp-for="PatientName"><strong>Patient Name:</strong></label>
                <p>@Model.PatientName</p>
            </div>

            <p><strong>Clinic:</strong> @Model.Clinic</p>

            <div class="form-group mb-3">
                <label asp-for="ReasonFor"><strong>Reason:</strong></label>
                <p>@Model.ReasonFor</p>
            </div>

            @* <div class="d-flex justify-content-start mt-6">
                <select  class="btn btn-dark me-2">
                    <option></option>
                </select>
                <a  class="btn btn-outline-dark">Cancel Appointment</a>
            </div> *@
        </div>
    </div>
</div>

